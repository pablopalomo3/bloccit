<h1>Advertisements#create</h1>

<div class="col-md-8">
    <%= form_for @ads do |f| %>
      <div class="form-group">
        <%= f.label :title %>
        <%= f.text_field :title, class: 'form-control', placeholder: "Enter ad title" %>
      </div>
      <div class="form-group">
        <%= f.label :copy %>
        <%= f.text_area :copy, rows: 8, class: 'form-control', placeholder: "Enter ad copy" %>
      </div>
      <div class="form-group">
        <%= f.label :price %>
        <%= f.number_field :price, rows: 8, class: 'form-control', placeholder: "Enter ad price" %>
      </div>
      <div class="form-group">
        <%= f.submit "Save", class: 'btn btn-success' %>
      </div>
    <% end %>
</div>